{
    "name": "phlak/lifx-client",
    "description": "PHP client library for the LIFX API (v1)",
    "license": "MIT",
    "authors": [
        {
            "name": "Chris Kankiewicz",
            "email": "Chris@ChrisKankiewicz.com",
            "homepage": "https://www.chriskankiewicz.com"
        }
    ],
    "support": {
        "issues": "https://github.com/PHLAK/lifx-client/issues"
    },
    "require": {
        "php": ">=7.1",
        "guzzlehttp/guzzle": "^6.0 || ^7.0"
    },
    "require-dev": {
        "php": ">=7.3",
        "friendsofphp/php-cs-fixer": "^3.3",
        "phlak/coding-standards": "^1.1",
        "phpunit/phpunit": "^9.0",
        "psy/psysh": "^0.10",
        "vimeo/psalm": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "PHLAK\\LIFX\\": "src/"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
